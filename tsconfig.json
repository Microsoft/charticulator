{
  "compileOnSave": true,
  "compilerOptions": {
    "allowSyntheticDefaultImports": true,
    "declaration": true,
    "outDir": "./dist/scripts",
    "module": "commonjs",
    "moduleResolution": "node",
    "target": "es6",
    "jsx": "react",
    "noImplicitAny": true,
    "sourceMap": true,
    "lib": ["es2017", "dom", "esnext.array"],
    "baseUrl": "./src",
    "rootDir": "./src",
    "paths": {
      "resources/*": ["resources/*"],
      "src/*": ["./*"]
    }
  },
  "exclude": ["karma.conf.ts", "node_modules", "dist"]
}
